{
  "compilerOptions": {
   "typeRoots": [
       "./node_modules/@types",
     ],
      "lib": [
          "dom",
          "dom.iterable",
          "esnext"
      ],
      "esModuleInterop": true,
     "target": "ES6",
     "rootDir": "./src",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}